{
  "name": "chubes/datamachine",
  "description": "WordPress plugin for automated data collection, AI processing, and multi-platform publishing",
  "version": "0.8.8",
	"license": "GPL-2.0-or-later",
	"require": {
		"php": ">=8.2",
		"monolog/monolog": "^3.9",
		"abraham/twitteroauth": "^8.1",
		"woocommerce/action-scheduler": "^3.9",
		"chubes4/ai-http-client": "^2.0.9"
	},
	"require-dev": {
		"phpunit/phpunit": "^12.0",
		"yoast/phpunit-polyfills": "^4.0",
		"php-stubs/wordpress-stubs": "^6.9",
		"wp-phpunit/wp-phpunit": "^6.9"
	},
	"autoload": {
		"psr-4": {
			"DataMachine\\Api\\": "inc/Api/",
			"DataMachine\\Core\\": "inc/Core/",
			"DataMachine\\Engine\\": "inc/Engine/",
			"DataMachine\\Services\\": "inc/Services/"
		}
	},
	"autoload-dev": {
		"psr-4": {
			"DataMachine\\Tests\\": "tests/"
		}
	},
	"config": {
		"process-timeout": 0,

		"allow-plugins": {
			"yoast/phpunit-polyfills": true
		}
	}
}
