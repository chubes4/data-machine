{
    "name": "chubes/data-machine",
    "description": "WordPress plugin for automated data collection, AI processing, and multi-platform publishing",
    "license": "proprietary",
    "require": {
        "php": ">=8.0",
        "monolog/monolog": "^3.9",
        "abraham/twitteroauth": "^7.0",
        "woocommerce/action-scheduler": "^3.9",
        "chubes4/ai-http-client": "*"
    },
    "require-dev": {
        "phpunit/phpunit": "^10.0",
        "yoast/phpunit-polyfills": "^2.0",
        "php-stubs/wordpress-stubs": "^6.8"
    },
    "autoload": {
        "psr-4": {
            "DataMachine\\Core\\": "inc/Core/",
            "DataMachine\\Engine\\": "inc/Engine/"
        },
        "files": [
            "inc/Engine/Filters/DataMachineFilters.php",
            "inc/Engine/Filters/Handlers.php",
            "inc/Engine/Filters/Database.php",
            "inc/Engine/Filters/Admin.php",
            "inc/Engine/Filters/Logger.php",
            "inc/Engine/Filters/AI.php",
            "inc/Engine/Filters/OAuth.php",
            "inc/Engine/Actions/DataMachineActions.php",
            "inc/Engine/Filters/StatusDetection.php",
            "inc/Engine/Filters/EngineData.php",
            "inc/Engine/Filters/DataPacket.php",
            "inc/Core/Database/ProcessedItems/ProcessedItemsFilters.php",
            "inc/Core/Database/Pipelines/PipelinesFilters.php",
            "inc/Core/Database/Jobs/JobsFilters.php",
            "inc/Core/Database/Flows/FlowsFilters.php",
            "inc/Core/Admin/Modal/ModalFilters.php",
            "inc/Core/Admin/Pages/Pipelines/PipelinesFilters.php",
            "inc/Core/Admin/Pages/Pipelines/Filters/PipelineTemplatesFilters.php",
            "inc/Core/Admin/Settings/SettingsFilters.php",
            "inc/Core/Admin/Pages/Logs/LogsFilters.php",
            "inc/Core/Admin/Pages/Jobs/JobsFilters.php",
            "inc/Core/Steps/Fetch/FetchStepFilters.php",
            "inc/Core/Steps/Fetch/Handlers/WordPress/WordPressFilters.php",
            "inc/Core/Steps/Fetch/Handlers/WordPressAPI/WordPressAPIFilters.php",
            "inc/Core/Steps/Fetch/Handlers/WordPressMedia/WordPressMediaFilters.php",
            "inc/Core/Steps/Fetch/Handlers/Rss/RssFilters.php",
            "inc/Core/Steps/Fetch/Handlers/GoogleSheets/GoogleSheetsFetchFilters.php",
            "inc/Core/Steps/Fetch/Handlers/Reddit/RedditFilters.php",
            "inc/Core/Steps/Fetch/Handlers/Files/FilesFilters.php",
            "inc/Core/Steps/Publish/PublishStepFilters.php",
            "inc/Core/Steps/Publish/Handlers/Twitter/TwitterFilters.php",
            "inc/Core/Steps/Publish/Handlers/WordPress/WordPressFilters.php",
            "inc/Core/Steps/Publish/Handlers/GoogleSheets/GoogleSheetsFilters.php",
            "inc/Core/Steps/Publish/Handlers/Facebook/FacebookFilters.php",
            "inc/Core/Steps/Publish/Handlers/Threads/ThreadsFilters.php",
            "inc/Core/Steps/Publish/Handlers/Bluesky/BlueskyFilters.php",
            "inc/Core/Steps/AI/AIStepFilters.php",
            "inc/Core/Steps/AI/Tools/GeneralToolsFilters.php",
            "inc/Core/Steps/AI/Tools/LocalSearch.php",
            "inc/Core/Steps/AI/Tools/GoogleSearch.php",
            "inc/Core/Steps/AI/Tools/WebFetch.php",
            "inc/Core/Steps/AI/Tools/WordPressPostReader.php",
            "inc/Core/Steps/AI/Directives/PluginCoreDirective.php",
            "inc/Core/Steps/AI/Directives/GlobalSystemPromptDirective.php",
            "inc/Core/Steps/AI/Directives/PipelineSystemPromptDirective.php",
            "inc/Core/Steps/AI/Directives/ToolDefinitionsDirective.php",
            "inc/Core/Steps/AI/Directives/SiteContextDirective.php",
            "inc/Core/Steps/Update/UpdateStepFilters.php",
            "inc/Core/Steps/Update/Handlers/WordPress/WordPressFilters.php",
            "inc/Engine/Filters/FilesRepository.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "DataMachine\\Tests\\": "tests/"
        }
    },
    "scripts": {
        "test": [
            "phpunit"
        ],
        "test:unit": [
            "phpunit tests/Unit"
        ],
        "test:integration": [
            "phpunit tests/Integration"
        ],
        "test:coverage": [
            "phpunit --coverage-html coverage"
        ],
        "test:verbose": [
            "phpunit --verbose"
        ]
    },
    "config": {
        "allow-plugins": {
            "yoast/phpunit-polyfills": true
        }
    }
}
